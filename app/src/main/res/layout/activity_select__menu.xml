<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neko.part_time_job.Select_Menu"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/juice"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="juice"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/latte"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/special"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/straight"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="straight tea"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp" />

    <Button
        android:id="@+id/latte"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="latte"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/honey" />

    <Button
        android:id="@+id/honey"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="honey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/straight" />

    <Button
        android:id="@+id/special"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="SPECIAL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" />

</android.support.constraint.ConstraintLayout>
