<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neko.">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:paddingTop="50dp">

            <Button
                android:id="@+id/assam_latte"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@color/colorPrimary"
                android:text="アッサムブラックティーラテ"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="一番市販のミルクティーに近い味です"
                android:textAlignment="center"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/jasmine_latte"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@color/colorPrimary"
                android:text="ジャスミンティーラテ"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="ジャスミンティーの説明"
                android:textAlignment="center"
                android:textStyle="italic" />

            <Button
                android:id="@+id/tikuan_latte"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@color/colorPrimary"
                android:text="鉄観音ティーラテ"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="鉄観音の説明"
                android:textAlignment="center"
                android:textStyle="italic" />

            <Button
                android:id="@+id/jinfon_latte"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@color/colorPrimary"
                android:text="ジンフォンティーラテ"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="ジンフォンの説明"
                android:textAlignment="center"
                android:textStyle="italic" />

            <Button
                android:id="@+id/azuki_late"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@color/colorPrimary"
                android:text="あずきティーラテ"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="小豆の説明"
                android:textAlignment="center"
                android:textStyle="italic" />

            <Button
                android:id="@+id/azuki_matya_latte"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@color/colorPrimary"
                android:text="あずき抹茶ラテ"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="あずきまっちゃの説明"
                android:textAlignment="center"
                android:textStyle="italic" />

            <Button
                android:id="@+id/okinawa_latte"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@color/colorPrimary"
                android:text="沖縄黒糖ティーラテ"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="沖縄黒糖の説明"
                android:textAlignment="center"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
