<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neko.part_time_job.juice_menu">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:paddingTop="50dp">

            <Button
                android:id="@+id/yakult_juice"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="#ff8484"
                android:text="ヤクルト＆ジャスミングリーンティー"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="一番市販のミルクティーに近い味です"
                android:textAlignment="center"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/honylemon_juice"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="#ff8484"
                android:text="ハニーレモンティー"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="ジャスミンティーの説明"
                android:textAlignment="center"
                android:textStyle="italic" />

            <Button
                android:id="@+id/grapefruits_jasmine_juice"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="#ff8484"
                android:text="フレッシュグレープフルーツ＆ジャスミングリーンティー"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="鉄観音の説明"
                android:textAlignment="center"
                android:textStyle="italic" />

            <Button
                android:id="@+id/honeygrapefruits_juice"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="#ff8484"
                android:text="ハニーグレープフルーツティー"
                android:textColor="#666666"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:paddingTop="10dp"
                android:text="ジンフォンの説明"
                android:textAlignment="center"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
